extends ../layout/index

block container
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Ideal 
            span.font-normal House
        h2.text-center.text-2xl.font-extrabold Restaurar tu acceso a IdealHouse

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-4(method="POST" action="/auth/restore-account")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Introduce tu email" type="email" name="email")

                    div.flex.items-center.justify-center.text-gray-500.text-xs
                        a(href="/auth/login") Volver a iniciar sesi√≥n

                    input(class="w-full bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar instrucciones")