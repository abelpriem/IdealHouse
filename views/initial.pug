extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block container
    div(class="py-5 ")
        h1(class="text-center text-4xl font-extrabold") Ubicación en el mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar propiedades

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categories" class="text-sm w-24 uppercase text-gray-500") Categorías
                select(id="categories" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione -
                    each category in categories
                        option(value=category.id)= category.name

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="prices" class="text-sm w-24 uppercase text-gray-500") Precios
                select(id="prices" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione -
                    each price in prices
                        option(value=price.id)= price.name

        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold py-10") Casas en Venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                each property in houses
                    include ./templates/card

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold py-10") Pisos en Venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-5")
                each property in departments
                    include ./templates/card
                    
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/initMap.js")