extends ../layout/index

block container
    h2(class="text-2xl font-extrabold text-center my-10")= page

    a(href="/home" class="rounded py-2 px-10 bg-yellow-600 hover:bg-yellow-700 text-white font-bold text-sm text-center cursor-pointer uppercase my-5 inline-block w-full md:w-auto") Volver

    div(class="mx-auto max-w-6xl bg-white shadow")

        if messages.length 
            ul
                each message in messages 
                    li(class="border-gray-200 border-b p-5")

                        p(class="font-bold text-gray-800") Nombre: 
                            span(class="font-normal uppercase")= message.user.name

                        p(class="font-bold text-gray-800") Email: 
                            span(class="font-normal")= message.user.email

                        p(class="font-bold text-gray-800") Mensaje: 
                            span(class="font-normal")= message.message

                        p(class="font-bold text-gray-800") Enviado: 
                            span(class="font-normal")= formatDate(message.createdAt)
        
        else
            p(class="py-2 font-bold text-center text-gray-600") No hay mensajes