extends ../layout/index

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block container
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Ideal
            span.font-normal House
        h2.text-center.text-2xl.font-extrabold= `AÃ±adir imagen: ` + property.title

        div(class="bg-white shadow py-6 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="image" class="dropzone border-dashed border-2 w-full min:h-96 h-auto ronded flex-col justify-center items-center" method="POST" action=`/properties/add-image/${property.id}`)
                input(type="hidden" name="_csrf" value= csrfToken)

            button(id="publish" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit") Publicar propiedad

block scripts
    script(src="/js/addImage.js")


